<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EntradaTexto">

    <EditText
        android:id="@+id/ideTEntradaTexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:hint="Texto aqui"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/idBtAnalisisTexto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Analisis"
        app:layout_constraintEnd_toEndOf="@+id/ideTEntradaTexto"
        app:layout_constraintStart_toStartOf="@+id/ideTEntradaTexto"
        app:layout_constraintTop_toBottomOf="@+id/ideTEntradaTexto" />

    <TextView
        android:id="@+id/idTvResultadoAnalisis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/idBtAnalisisTexto"
        app:layout_constraintStart_toStartOf="@+id/idBtAnalisisTexto"
        app:layout_constraintTop_toBottomOf="@+id/idBtAnalisisTexto" />
</androidx.constraintlayout.widget.ConstraintLayout>